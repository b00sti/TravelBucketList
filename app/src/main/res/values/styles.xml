<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ConParent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchVertical" parent="Match">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchHorizontal" parent="Match">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WrapVertical" parent="Wrap">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WrapHorizontal" parent="Wrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchWidthVertical" parent="MatchWidth">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchHeightVertical" parent="MatchHeight">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchWidthHorizontal" parent="MatchWidth">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchHeightHorizontal" parent="MatchHeight">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Root">
        <item name="android:padding">32dp</item>
        <item name="android:layout_height">@dimen/match_parent</item>
        <item name="android:layout_width">@dimen/match_parent</item>
    </style>

    <style name="RootWithTopBottomPadding">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_height">@dimen/match_parent</item>
        <item name="android:layout_width">@dimen/match_parent</item>
    </style>

    <style name="AppTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextAppearance.Dark" parent="AppTextAppearance">
        <item name="android:textColor">@color/text_dark</item>
    </style>
    <style name="AppTextAppearance.Heavy" parent="AppTextAppearance">
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="AppTextAppearance.Medium" parent="AppTextAppearance">
        <item name="android:textColor">@color/text_medium</item>
    </style>

    <style name="AppTextAppearance.Light" parent="AppTextAppearance">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="AppTextAppearance.Bold" parent="AppTextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextAppearance.Bold.Heavy" parent="AppTextAppearance.Bold">
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextAppearance.Bold.Medium" parent="AppTextAppearance.Bold">
        <item name="android:textColor">@color/text_medium</item>
    </style>

    <style name="AppTextAppearance.Bold.Light" parent="AppTextAppearance.Bold">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Widget" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Widget.FullWidthButton" parent="Widget">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">@dimen/match_constrain</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginStart">@dimen/button_margin_sides</item>
        <item name="android:layout_marginEnd">@dimen/button_margin_sides</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:textAppearance">@style/AppTextAppearance.Light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@animator/button_press</item>
        <item name="android:background">@drawable/btn_accent_round</item>
    </style>

    <style name="AppDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="Widget.TextInputLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="android:textColorHint">@color/text_dark</item>
    </style>

    <style name="Widget.TextEdit">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:textColorHighlight">@color/text_light</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColorHint">@color/text_dark</item>
        <item name="android:background">@drawable/background_input</item>
        <item name="android:textAppearance">@style/AppTextAppearance.Dark</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
