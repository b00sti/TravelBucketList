<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white_color</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextAppearance.Dark" parent="AppTextAppearance">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="AppTextAppearance.Heavy" parent="AppTextAppearance">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="AppTextAppearance.Medium" parent="AppTextAppearance">
        <item name="android:textColor">@color/text_medium</item>
    </style>

    <style name="AppTextAppearance.Light" parent="AppTextAppearance">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="AppTextAppearance.Bold" parent="AppTextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextAppearance.Bold.Heavy" parent="AppTextAppearance.Bold">
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ConParent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchVertical" parent="Match">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchHorizontal" parent="Match">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WrapVertical" parent="Wrap">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WrapHorizontal" parent="Wrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchWidthVertical" parent="MatchWidth">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchHeightVertical" parent="MatchHeight">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchWidthHorizontal" parent="MatchWidth">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchHeightHorizontal" parent="MatchHeight">
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
